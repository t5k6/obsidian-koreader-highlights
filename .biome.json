{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"files": {
		"maxSize": 200000,
		"includes": [
			"**",
			"!**/dist",
			"!**/*.gen.ts",
			"!./coverage.json",
			"!./coverage",
			"!**/.next"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100,
		"useEditorconfig": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedImports": "error",
				"noUnusedPrivateClassMembers": "error"
			}
		}
	},
	"javascript": {
		"globals": [
			"vi",
			"describe",
			"it",
			"test",
			"expect",
			"beforeAll",
			"beforeEach",
			"afterAll",
			"afterEach"
		]
	}
}
