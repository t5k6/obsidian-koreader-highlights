{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"files": {
		"includes": [
			"**",
			"!node_modules/**",
			"!dist/**",
			"!build/**",
			"!coverage/**"
		],
		"maxSize": 200000
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"typescript": {
				"noUnsafeAny": "off"
			}
		}
	},
	"javascript": {
		"globals": [
			"vi",
			"describe",
			"it",
			"test",
			"expect",
			"beforeAll",
			"beforeEach",
			"afterAll",
			"afterEach"
		]
	}
}
