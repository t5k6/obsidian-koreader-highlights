{
	"name": "koreader-highlights-importer",
	"version": "1.4.2",
	"description": "Imports highlights and metadata from KOReader into Obsidian notes (https://obsidian.md)",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "cross-env NODE_ENV=development node esbuild.config.mjs --watch",
		"build": "cross-env NODE_ENV=production  node esbuild.config.mjs",
		"lint": "biome check --write",
		"test": "pnpm exec tsc -p tsconfig.json --noEmit && vitest",
		"test:coverage": "vitest run --coverage",
		"prepare": "husky"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"koreader",
		"highlights",
		"ebook"
	],
	"author": "Tahsin Kocaman",
	"license": "MIT",
	"dependencies": {
		"@floating-ui/dom": "^1.7.4",
		"luaparse": "^0.3.1",
		"node-diff3": "^3.2.0",
		"obsidian": "^1.11.0",
		"sql.js": "^1.13.0",
		"vitest-mock-extended": "^3.1.0",
		"zod": "^4.3.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/diff3": "^0.0.2",
		"@types/js-yaml": "^4.0.9",
		"@types/jsdom": "27.0.0",
		"@types/luaparse": "^0.2.13",
		"@types/node": "25.0.3",
		"@types/sql.js": "^1.4.9",
		"@vitest/coverage-v8": "^4.0.16",
		"cross-env": "10.1.0",
		"esbuild": "^0.27.2",
		"husky": "^9.1.7",
		"js-yaml": "^4.1.1",
		"jsdom": "27.1.0",
		"lint-staged": "^16.2.7",
		"tslib": "2.8.1",
		"typescript": "^5.9.3",
		"vite-tsconfig-paths": "^6.0.3",
		"vitest": "^4.0.16"
	},
	"lint-staged": {
		"*.{js,cjs,mjs,ts,tsx,json,md}": [
			"biome check --write"
		]
	}
}
