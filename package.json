{
	"name": "koreader-highlights-importer",
	"version": "1.2.1",
	"description": "Imports highlights and metadata from KOReader into Obsidian notes (https://obsidian.md)",
	"main": "main.js",
	"type": "commonjs",
	"scripts": {
		"dev": "cross-env NODE_ENV=development node esbuild.config.cjs --watch",
		"build": "cross-env NODE_ENV=production  node esbuild.config.cjs",
		"lint": "@biomejs/biome check --write",
		"test": "vitest"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"koreader",
		"highlights",
		"ebook"
	],
	"author": "Tahsin Kocaman",
	"license": "MIT",
	"dependencies": {
		"luaparse": "^0.3.1",
		"node-diff3": "^3.1.2",
		"obsidian": "^1.8.7",
		"pako": "^2.1.0",
		"sql.js": "^1.13.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"@types/diff3": "^0.0.2",
		"@types/js-yaml": "^4.0.9",
		"@types/luaparse": "^0.2.12",
		"@types/node": "24.0.0",
		"@types/pako": "^2.0.3",
		"@types/sql.js": "^1.4.9",
		"@vitest/coverage-v8": "^3.2.4",
		"cross-env": "^7.0.3",
		"esbuild": "^0.25.8",
		"js-yaml": "^4.1.0",
		"jsdom": "^26.1.0",
		"tslib": "2.8.1",
		"typescript": "^5.8.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	}
}
