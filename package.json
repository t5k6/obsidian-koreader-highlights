{
	"name": "koreader-highlights-importer",
	"version": "1.3.0",
	"description": "Imports highlights and metadata from KOReader into Obsidian notes (https://obsidian.md)",
	"main": "main.js",
	"type": "commonjs",
	"scripts": {
		"dev": "cross-env NODE_ENV=development node esbuild.config.cjs --watch",
		"build": "cross-env NODE_ENV=production  node esbuild.config.cjs",
		"lint": "biome check --write",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"prepare": "husky"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"koreader",
		"highlights",
		"ebook"
	],
	"author": "Tahsin Kocaman",
	"license": "MIT",
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"luaparse": "^0.3.1",
		"node-diff3": "^3.1.2",
		"obsidian": "^1.8.7",
		"pako": "^2.1.0",
		"sql.js": "^1.13.0",
		"zod": "^4.0.17"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@types/diff3": "^0.0.2",
		"@types/js-yaml": "^4.0.9",
		"@types/luaparse": "^0.2.12",
		"@types/node": "24.0.0",
		"@types/pako": "^2.0.4",
		"@types/sql.js": "^1.4.9",
		"@vitest/coverage-v8": "^3.2.4",
		"cross-env": "10.0.0",
		"esbuild": "^0.25.9",
		"husky": "^9.1.7",
		"js-yaml": "^4.1.0",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.5",
		"p-limit": "6.2.0",
		"tslib": "2.8.1",
		"typescript": "^5.9.2",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	},
	"lint-staged": {
		"*.{js,cjs,mjs,ts,tsx,json,md}": [
			"biome check --write"
		]
	}
}
